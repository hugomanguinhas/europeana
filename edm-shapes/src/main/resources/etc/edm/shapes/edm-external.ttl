  sh:scopeClass edm:Agent ;
.

esh:VR-Place
  a sh:Shape ;
  rdfs:subClassOf rdfs:Resource ;
  sh:scopeClass edm:Place ;
.

esh:VR-TimeSpan
  a sh:Shape ;
  rdfs:subClassOf rdfs:Resource ;
  sh:scopeClass edm:TimeSpan ;
.

esh:VR-Concept
  a sh:Shape ;
  rdfs:subClassOf rdfs:Resource ;
  sh:scopeClass skos:Concept ;
.





